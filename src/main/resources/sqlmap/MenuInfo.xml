<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap  
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"   
    "http://ibatis.apache.org/dtd/sql-map-2.dtd" >

<sqlMap namespace="menuInfo">

  <typeAlias alias="menuInfo" type="jp.co.sji.edu.fb.common.dto.MenuInfo"/>


    <select id="selectMenu" parameterClass="String" resultClass="menuInfo">
    SELECT
        MENUCLASS,                                  
        MENUGROUP,                                  
        MENUNAME,                                  
        URL,
        DISPLAYINDEX
    FROM 
        MENUINFO
    WHERE 
        MENUCLASS = #userType#                                 
    ORDER BY 
        DISPLAYINDEX ASC  
    </select>

</sqlMap>
                                  
