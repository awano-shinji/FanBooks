<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap  
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"   
    "http://ibatis.apache.org/dtd/sql-map-2.dtd" >

<sqlMap namespace="systemInfo">

  <typeAlias alias="systemInfo" type="jp.co.sji.edu.fb.common.dto.SystemInfo"/>

   
    <select id="selectRunFlag" resultClass="systemInfo">
    SELECT
        RUNFLAG,
        ETAREMARKDAYS,
        INITIALPASSWORD,
        HISTORYORDERSTART,
        HISTORYORDEREND,
        BNKLDMAIL
    FROM SYSTEMINFO
    </select>
	
  <update id="updateHisUnlock" >
    UPDATE SYSTEMINFO
    SET
       HISTORYDOWNLOADFLAG = '0'
   </update>
	
  <update id="updateHisLock" >
    UPDATE SYSTEMINFO
    SET
       HISTORYDOWNLOADFLAG = '1',
	   HISTORYDOWNLOADTIME = sysdate
   </update>

</sqlMap>

